#include <Arduino_FreeRTOS.h>
void TaskBlink1( void *pvParameters );
void Taskprint( void *pvParameters );
void setup() {
  // inicializa la comunicaci√≥n serial a 9600 bits por segundo:
  Serial.begin(9600);
  xTaskCreate(TaskBlink1, "tarea1", 128, NULL, 1, NULL );
  xTaskCreate(Taskprint, "tarea2", 128, NULL, 1, NULL );
vTaskStartScheduler();
}
void loop(){
}

void TaskBlink1(void *pvParameters){
  pinMode(7, OUTPUT);
  while(1){
    Serial.println("Tarea1");
    digitalWrite(7, HIGH);   
    vTaskDelay( 300 / portTICK_PERIOD_MS ); 
    digitalWrite(7, LOW);   
    vTaskDelay( 300 / portTICK_PERIOD_MS ); 
  }
}
void Taskprint(void *pvParameters)  {
  int contador = 0;
  while(1){
contador++;
  Serial.println(String("Tarea2: ")+ int(contador)); 
  vTaskDelay(500 / portTICK_PERIOD_MS);    }
}
