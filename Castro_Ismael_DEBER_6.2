void mouseReleased(){
  if(mouseButton == RIGHT){
    noStroke();
    fill(46,255,63);
    ellipse(250,250,200,200);
    fill(255,255,255);
    text("¡Encendido!",250,250);
  }

  if(mouseButton == LEFT){
    noStroke();
    fill(255,0,0);
    ellipse(250,250,200,200);
    fill(255,255,255);
    text("¡Apagado!",250,250);
  }
}


